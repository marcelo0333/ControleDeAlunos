generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum StatusAluno {
  ATIVO
  CANCELADO
}

model Instituicao {
  id        Int      @id @default(autoincrement())
  nome      String
  email     String   @unique
  senha     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  cursos     Curso[]
  alunos     Aluno[]
}

model Curso {
  id        Int      @id @default(autoincrement())
  nome      String
  codigo    String   
  instituicao  Instituicao @relation(fields: [instituicaoId], references: [id])
  instituicaoId Int
  dt_inicio DateTime
  dt_fim    DateTime
  docente   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  alunos     Aluno[]

  @@unique([codigo, instituicaoId])
}

model Aluno {
  id        Int      @id @default(autoincrement())
  nome      String
  cpf       String   @unique
  dt_nascimento DateTime
  curso     Curso    @relation(fields: [cursoId], references: [id])
  cursoId   Int
  instituicao  Instituicao @relation(fields: [instituicaoId], references: [id])
  instituicaoId Int
  hash     String?
  file_path String?
  url_callback String?
  status   StatusAluno @default(ATIVO)
  createdAt DateTime @default(now())
  deleted_at DateTime?
  updatedAt DateTime @updatedAt
}